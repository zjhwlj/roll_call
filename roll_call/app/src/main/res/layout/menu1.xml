<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.zjh.roll_call.mine_ImageViewPlus
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/head"
            android:background="@drawable/tim"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="teacher"
                android:id="@+id/identity"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chooseLinearLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/first"
        android:background="#DCDCDC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            style="@style/MenuTabText"
            android:text="10010"
            />
        <TextView
            style="@style/MenuTabText"
            android:text="福州大学"
            />
        <TextView
            style="@style/MenuTabText"
            android:text="所教课程数： 2 "
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"></View>
        <TextView
            style="@style/MenuTabText"
            android:text="更改手机号码"
            android:id="@+id/changphone"
            android:drawableLeft="@drawable/shouji"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"></View>
        <TextView
            style="@style/MenuTabText"
            android:id="@+id/changpassword"
            android:text="更改密码"
            android:drawableLeft="@drawable/mima54"
            android:background="#DCDCDC"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"></View>
        <TextView
            style="@style/MenuTabText"
            android:text="成绩录入"
            android:id="@+id/score"
            android:drawableLeft="@drawable/chazhao"
            android:background="#DCDCDC"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"></View>
        <TextView
            style="@style/MenuTabText"
            android:text="意见反馈"
            android:id="@+id/suggest"
            android:drawableLeft="@drawable/bianjixiugaiqianbishuxie"
            android:background="#DCDCDC"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"></View>
        <TextView
            style="@style/MenuTabText"
            android:text="关于我们"
            android:id="@+id/aboutus"
            android:drawableLeft="@drawable/xinxi"
            android:background="#DCDCDC"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
