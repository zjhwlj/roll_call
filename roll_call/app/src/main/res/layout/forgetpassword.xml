<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/i"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入注册手机号"
        android:textColorHint="#fff"
        android:id="@+id/phone"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias = "0.1"/>
    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkNumberLine"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintTop_toBottomOf="@+id/phone">
        <EditText
            android:layout_width="200dp"
            android:layout_marginLeft="30dp"
            android:textColorHint="#fff"
            android:hint="验证码"
            android:id="@+id/checkNumber"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:id="@+id/getCheckNumber"
            android:textColor="#fff"
            android:background="#1E90FF"
            android:text="获取验证码"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/checkNumberLine"
        app:layout_constraintTop_toBottomOf="@+id/checkNumberLine"
        android:id="@+id/retrieve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E90FF"
        android:textColor="#fff"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="120dp"
        android:text="找回密码"/>
</android.support.constraint.ConstraintLayout>
