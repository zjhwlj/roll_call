<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mmexport1552886952340"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RadioGroup
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:id="@+id/idgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/studentButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:layout_marginLeft="100dp"
            android:textColor="#fff"
            android:text="学生"/>
        <RadioButton
            android:id="@+id/teacherButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:text="老师" />
    </RadioGroup>
    <EditText
        android:hint="请输入手机号"
        android:textColorHint="#fff"
        android:id="@+id/phenoNumber"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/idgroup" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/checkcodeLine"
        app:layout_constraintTop_toBottomOf="@+id/phenoNumber">
        <EditText
            android:id="@+id/signupCheck"
            android:layout_width="120dp"
            android:layout_marginLeft="80dp"
            android:hint="验证码"
            android:textColorHint="#fff"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/getSignupCheck"
            android:layout_width="match_parent"
            android:layout_marginRight="80dp"
            android:paddingLeft="10dp"
            android:layout_height="40dp"
            android:background="#1E90FF"
            android:textColor="#fff"
            android:text="获取验证码" />
    </LinearLayout>
    <EditText
        android:hint="请输入密码"
        android:textColorHint="#fff"
        android:id="@+id/password"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/checkcodeLine"/>
    <EditText
        android:hint="再次输入密码"
        android:textColorHint="#fff"
        android:id="@+id/confimPassword"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/password"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/confimPassword">
        <Button
            android:text="注册"
            android:id="@+id/signup"
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="80dp"
            android:background="#1E90FF"
            android:textColor="#fff"
            android:layout_height="wrap_content" />
        <Button
            android:text="登录"
            android:layout_marginLeft="5dp"
            android:id="@+id/toLoginIn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="80dp"
            android:background="#1E90FF"
            android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
