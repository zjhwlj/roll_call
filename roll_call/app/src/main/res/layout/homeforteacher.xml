<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeMain"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/search"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/add"
            android:id="@+id/addcourse"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <ListView
        android:id="@+id/list_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    </ListView>
    <TextView
        android:text="课程"
        android:id="@+id/course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/courseTable" />

    <TextView
        android:text="通知"
        android:gravity="bottom"
        android:id="@+id/courseTable"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/course"
        app:layout_constraintRight_toLeftOf="@+id/notice"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="我的"
        android:gravity="bottom"
        android:id="@+id/notice"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/courseTable"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>